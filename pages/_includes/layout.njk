<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ dir }}">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{ metaTitle ~ " - " if metaTitle }}{{ site.title }}</title>

  <!-- Open Graph + Twitter -->
  <meta name="twitter:card" content="summary">
  <meta name="twitter:creator" content="{{ site.authorTwitter }}">
  <meta property="og:url" content="{{ site.url }}">
  <meta property="og:title" content="{{ metaTitle ~ ' - ' if metaTitle }}{{ site.title }}">
  <meta property="og:description" content="{{ metaDescription if metaDescription else site.description }}">
  <meta property="og:image" content="{{ metaImage if metaImage else site.metaImage }}">

  <!-- Apple icon (minimal) -->
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">

  <!-- CSS -->
    <link rel="stylesheet" href="/static/css/main.css?ref={{ site.buildDate | date('X') }}">
</head>

<body data-barba="wrapper">

<!-- ======= Header ======= -->
<header id="header" class="header fixed-top">
  <div class="container-fluid container-xl d-flex align-items-start justify-content-between">
    <div class="logos">

      <a href="index.html" class="logorf d-flex align-items-center">
        <img src="/static/images/logorf.png" alt="">
      </a>
      <a href="index.html" class="logo d-flex align-items-center">
        <img src="/static/images/logo.png" alt="">
      </a>
    </div>

    {% include "nav.njk" %}


  </div>
</header><!-- End Header -->


<!-- ======= Hero Section ======= -->
<section id="hero" class="hero d-flex align-items-center">
  <div class="container">
    <div class="row">
      <div class="col-lg-7 d-flex flex-column justify-content-center hero-content">
        <h1 class="gradient" data-aos="fade-up">{{ 'title1' | i18n }}</h1>
        <h2 data-aos="fade-up" data-aos-delay="400" class="h5 col-10">{{ 'undertitle1' | i18n }}</h2>
        <div data-aos="fade-up" data-aos-delay="600" class="d-flex mt-5">
          <div class="text-center text-lg-start">
            <a href="#tools" class="btn btn-blue btn-lg scrollto d-inline-flex align-items-center justify-content-center align-self-center">
              <span class="text-white">En savoir plus</span>
              <i class="bi bi-arrow-down text-white ms-3"></i>
            </a>
          </div>
        </div>
      </div>
      <div class="col-lg-5 hero-img" data-aos="zoom-out" data-aos-delay="200">
      </div>
    </div>
  </div>
</section><!-- End Hero -->




  {% block banimg %}
  {% endblock %}


  {% block contenthere %}
    {{ content | safe }}
  {% endblock %}


  <!-- ======= Footer ======= -->
  <footer id="footer" class="footer bg-white">

    <div class="footer-top my-5">
      <div class="container my-5">
        <div class="row gy-4 align-items-center">
          <div class="col-md-12  col-lg-5 footer-info d-flex align-items-center justify-content-start">
            <a href="/" class="logo d-flex align-items-center">
              <img src="/static/images/logo.png" alt="">
            </a>
            <div>
              {% include 'partials/language-selector.njk' %}
            </div>
          </div>



          <div class="col-lg-7 col-6 footer-links">
            <ul class="navbar  navbar-menu justify-content-end">
              <li> <a href="#">Home</a></li>
              <li> <a href="#">About us</a></li>
              <li> <a href="#">Services</a></li>
              <li> <a href="#">Terms of service</a></li>
              <li> <a href="#">Privacy policy</a></li>
            </ul>
          </div>

        </div>
      </div>
    </div>

  </footer><!-- End Footer -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

</body>

<script>
  function openNav() {
    document.getElementById("mySidebar").style.width = "250px";
    document.getElementById("pageCont").style.marginLeft = "250px";
  }

  function closeNav() {
    document.getElementById("mySidebar").style.width = "0";
    document.getElementById("pageCont").style.marginLeft= "0";
  }
</script>

<script type="module" src="/static/scripts/index.js?ref={{ site.buildDate | date('X') }}"></script>

</html>
